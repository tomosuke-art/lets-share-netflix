<header>
    <div class="header-logo">
      <%= link_to("TOP","/",class: "logox")%>
    </div>
  </header>
<div class="recommend">
  <h1>全ジャンルおすすめ一覧</h1>
</div>
 <div class="post-index">
  <div class="container">
    <% @posts.each do |post| %>
     <div class="row">
      <div class="col-sm-5">
       <div class="user-linkx">
         <% if post.user.image_name? %>
           <img src=<%= post.user.image_name %> class = "icon_imagex">
           <%= link_to(post.user.user_name,"/users/#{post.user.id}",class: "user-linkname")%>
         <% else %>
           <img src="/assets/default.png" class="icon_imagex" alt="ユーザーアイコン" >
           <%= link_to(post.user.user_name,"/users/#{post.user.id}",class: "user-linkname")%>
         <% end %> 
       </div>
        <div class="title-name">
          <span class="fa fa-film"></span><%= post.title%>
        </div>
        <div class="year-name">
          <%= post.released_year%><span>年</span>
        </div>
        <div class="image-name">
          <%= image_tag post.image_url  %>
        </div>
      </div>
      <div class="col-sm-7">
        <div class="content">
          <p><span class="fa fa-comments-o"></span> あらすじ・感想 <span class="fa fa-comments-o"></span></p>
          <%= post.summary%>
        </div>
        <div class="director-name">
          <P><span class="fas fa-user-secret"></span> 監督名</P>
          <%= post.director%>
        </div>
        <div class="cast">
          <p><span class="fas fa-group"> キャスト名</p>
          <%= post.cast%><br>
          <%= post.casta%><br>
          <%= post.castb%>
        </div><br>
        <%= post.created_at.to_s(:datetime_jp) %>
      </div>
     </div>
     <hr>
    <% end %>
  </div>
 </div>











